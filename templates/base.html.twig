<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Frica{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
</head>
    <nav class="navbar navbar-expand-lg navbar-light ">
  <a class="navbar-brand  ml-5" href="#"><img src="{{asset('icones/menu.png')}}" alt="icone de menu" ></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto d-flex justify-content-center w-100">
        <a href="{{ path('home') }}">
      <li class="nav-item title active text-uppercase mr-5 ">
        frica
      </li>
        </a>
    </ul>
        <ul class="navbar-nav ml-auto  ">
      <li class="nav-item active mr-5 ">
        <img   src="{{asset('icones/profil.png')}}" alt="icone de profil" srcset="">
      </li>
    <li class="nav-item dropdown  ">
        <a class="nav-link dropdown-toggle p-0" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <img src="{{asset('icones/caddy.png')}}" alt="">
        </a>

        <div class="dropdown-menu dropdown-menu-right vw-10 mr-5 " aria-labelledby="navbarDropdownMenuLink">
            {% if panier | length >=1 %}
            {% for articles in panier  %}
           <div class="d-flex ml-2 ">

           <p><img class=" img-fluid" src="{{asset('panier/' ~ articles.produit.picturesPanier)}}" alt="" srcset=""></p>
                <div class="d-flex flex-column align-items-center justify-content-center">
                <p><a class="dropdown-item" href="#">{{articles.produit.articleName}}</a></p>
               <p class="price">{{ articles.produit.price*articles.quantite }}€</p>
                    </div>
          </div>

          <hr/>
            {% endfor %}
          <a class="dropdown-item" href="#">totales: {{prixPanier}}€</a>
          <a class="dropdown-item " href="{{path('panier')}}"><button class="buy-now text-white w-100 border-none pl-5 pr-5 pt-3 pb-3">voir le panier</button></a>
        {% else %}
                <p class="text-center">Votre panier est vide</p>
            {% endif %}
        </div>
      </li>
        <li class="nav-item active ml-0 mr-5 h-25 mt-3 notifications  ">
            {% if notifications >0 %}
            {{ notifications }}
            {% else %}
            {% endif %}
        </li>
 
           <li class="nav-item active mr-5 ">
                <form action="POST">
                    <input class="d-none "  type="search" name="search" placeholder="example: cell phone">
                    <img class="mr-4 animation-search" src="{{asset('icones/search.png')}}" alt="icone de profil" srcset="">

                </form>
            </li>
    </ul>
  </div>
</nav>

        {% block body %}
        
      
        {% endblock %}

          {% block script %}
            <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
            <script src="{{asset('js/animation.js')}}"></script>
             <script src="{{asset('js/filter.js')}}"></script>
              <script src="{{asset('js/panier.js')}}"></script>
        {% endblock %}
    </body>
</html>
